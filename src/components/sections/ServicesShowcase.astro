---
import { Icon } from "astro-icon/components";

const services = [
  {
    icon: "ph:gear-bold",
    title: "Custom Fabrication",
    description: "Tailored fabrication solutions to meet your specific requirements",
    features: [
      "Precision cutting and welding",
      "Custom metal forming",
      "Assembly and finishing"
    ]
  },
  {
    icon: "ph:package-bold",
    title: "Material Supply",
    description: "High-quality materials for industrial applications",
    features: [
      "Wide range of metals and alloys",
      "Just-in-time delivery",
      "Bulk ordering available"
    ]
  },
  {
    icon: "ph:compass-tool-bold",
    title: "Hardware Solutions",
    description: "Complete range of industrial hardware components",
    features: [
      "Industrial fasteners",
      "Specialized tools",
      "Safety equipment"
    ]
  }
];
---

<section class="relative py-20 overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0">
    <!-- Gradient Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-gray-50 via-white to-gray-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900"></div>
    
    <!-- Decorative Elements -->
    <div class="absolute inset-0">
      <!-- Animated Gear Pattern -->
      <div class="absolute top-20 -left-20 w-40 h-40 text-blue-500/10 dark:text-blue-400/10 animate-spin-slow">
        <Icon name="ph:gear-bold" class="w-full h-full" />
      </div>
      <div class="absolute bottom-20 -right-20 w-60 h-60 text-purple-500/10 dark:text-purple-400/10 animate-spin-slow-reverse">
        <Icon name="ph:gear-bold" class="w-full h-full" />
      </div>
      
      <!-- Grid Pattern -->
      <div class="absolute inset-0 bg-grid-pattern opacity-[0.05] dark:opacity-[0.02]"></div>
    </div>
  </div>

  <div class="container relative mx-auto px-4">
    <div class="text-center mb-16">
      <h2 
        class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent"
        data-aos="fade-up"
      >
        Our Services
      </h2>
      <p 
        class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto text-lg"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        Comprehensive industrial solutions tailored to your needs
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service, index) => (
        <div 
          class="group relative bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm p-8 rounded-2xl border border-gray-200/50 dark:border-gray-700/50 hover:border-blue-500/50 dark:hover:border-blue-500/30 transform hover:-translate-y-1 transition-all duration-300 hover:shadow-xl hover:shadow-blue-500/10"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <!-- Glow Effect -->
          <div class="absolute inset-0 bg-gradient-to-br from-blue-500/0 to-purple-500/0 group-hover:from-blue-500/5 group-hover:to-purple-500/5 rounded-2xl transition-colors duration-500"></div>
          
          <!-- Icon Container -->
          <div class="relative mb-8">
            <div class="absolute inset-0 bg-blue-500/20 dark:bg-blue-500/10 rounded-xl blur-xl group-hover:blur-2xl transition-all duration-300"></div>
            <div class="relative p-4 bg-gradient-to-br from-blue-50 to-purple-50 dark:from-blue-900/50 dark:to-purple-900/50 rounded-xl group-hover:scale-110 transition-transform duration-300">
              <Icon 
                name={service.icon} 
                class="w-8 h-8 text-blue-600 dark:text-blue-400 transform group-hover:rotate-12 transition-transform duration-300" 
              />
            </div>
          </div>
          
          <!-- Content -->
          <h3 class="text-xl font-bold mb-3 text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
            {service.title}
          </h3>
          <p class="text-gray-600 dark:text-gray-400 mb-6 text-sm leading-relaxed">
            {service.description}
          </p>
          
          <!-- Features -->
          <ul class="space-y-3">
            {service.features.map(feature => (
              <li class="flex items-center text-sm text-gray-600 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-gray-300 transition-colors">
                <Icon 
                  name="ph:check-circle" 
                  class="w-4 h-4 mr-2 text-blue-500 group-hover:scale-110 transition-transform duration-300" 
                />
                {feature}
              </li>
            ))}
          </ul>

          <!-- Hover Effect Line -->
          <div class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-blue-500 to-purple-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 rounded-b-2xl"></div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .bg-grid-pattern {
    background-image: 
      linear-gradient(to right, rgba(0,0,0,0.1) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(0,0,0,0.1) 1px, transparent 1px);
    background-size: 40px 40px;
  }

  @keyframes spin-slow {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  @keyframes spin-slow-reverse {
    from { transform: rotate(360deg); }
    to { transform: rotate(0deg); }
  }

  .animate-spin-slow {
    animation: spin-slow 20s linear infinite;
  }

  .animate-spin-slow-reverse {
    animation: spin-slow-reverse 25s linear infinite;
  }
</style>