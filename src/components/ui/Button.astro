---
interface Props {
  variant?: 'primary' | 'secondary' | 'accent';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
}

const {
  variant = 'primary',
  size = 'md',
  class: className,
  type = 'button',
  disabled = false,
  ...rest
} = Astro.props;

const sizeClasses = {
  sm: 'px-3 py-1.5 text-sm',
  md: 'px-4 py-2',
  lg: 'px-6 py-3 text-lg'
};

const variants = {
  primary: 'btn-primary',
  secondary: 'btn-secondary',
  accent: 'btn-accent'
};
---

<button
  type={type}
  class:list={[
    'btn',
    variants[variant],
    sizeClasses[size],
    disabled && 'opacity-50 cursor-not-allowed',
    className
  ]}
  disabled={disabled}
  {...rest}
>
  <slot />
</button> 