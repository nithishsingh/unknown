---
interface Props {
  title: string;
  description: string;
  icon?: string;
  features?: string[];
  link?: {
    text: string;
    href: string;
  };
  class?: string;
}

const {
  title,
  description,
  icon,
  features,
  link,
  class: className
} = Astro.props;

import { Icon } from 'astro-icon/components';
---

<div
  class:list={[
    "bg-white dark:bg-dark-surface rounded-xl shadow-sm hover:shadow-md",
    "border border-gray-200 dark:border-gray-700",
    "transition-all duration-300 p-6",
    className
  ]}
>
  {icon && (
    <div class="w-12 h-12 rounded-lg bg-primary-50 dark:bg-primary-900/20 flex items-center justify-center mb-4">
      <Icon name={icon} class="w-6 h-6 text-primary-600 dark:text-primary-400" />
    </div>
  )}
  
  <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
    {title}
  </h3>
  
  <p class="text-gray-600 dark:text-gray-400 mb-4">
    {description}
  </p>
  
  {features && features.length > 0 && (
    <ul class="space-y-2 mb-6">
      {features.map(feature => (
        <li class="flex items-center text-gray-600 dark:text-gray-400">
          <Icon name="lucide:check" class="w-4 h-4 text-green-500 mr-2" />
          <span>{feature}</span>
        </li>
      ))}
    </ul>
  )}
  
  {link && (
    <a
      href={link.href}
      class="inline-flex items-center text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300"
    >
      <span>{link.text}</span>
      <Icon name="lucide:arrow-right" class="w-4 h-4 ml-1" />
    </a>
  )}
</div> 