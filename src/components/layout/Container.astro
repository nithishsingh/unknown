---
interface Props {
  as?: keyof HTMLElementTagNameMap;
  size?: 'sm' | 'md' | 'lg' | 'xl' | '2xl' | 'full';
  class?: string;
}

const { 
  as: Element = 'div',
  size = 'lg',
  class: className
} = Astro.props;

type SizeKey = 'sm' | 'md' | 'lg' | 'xl' | '2xl' | 'full';

const sizes: Record<SizeKey, string> = {
  sm: 'max-w-screen-sm',
  md: 'max-w-screen-md',
  lg: 'max-w-screen-lg',
  xl: 'max-w-screen-xl',
  '2xl': 'max-w-screen-2xl',
  full: 'max-w-full'
};
---

<Element
  class:list={[
    'mx-auto w-full px-4 sm:px-6 lg:px-8',
    sizes[size as SizeKey],
    className
  ]}
>
  <slot />
</Element>