---
interface Props {
  cols?: 1 | 2 | 3 | 4 | 5 | 6;
  gap?: 'none' | 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
}

const {
  cols = 3,
  gap = 'md',
  class: className
} = Astro.props;

type ColKey = NonNullable<Props['cols']>;
type GapKey = NonNullable<Props['gap']>;

const columns: Record<ColKey, string> = {
  1: 'grid-cols-1',
  2: 'grid-cols-2',
  3: 'grid-cols-3',
  4: 'grid-cols-4',
  5: 'grid-cols-5',
  6: 'grid-cols-6'
};

const gaps: Record<GapKey, string> = {
  none: 'gap-0',
  sm: 'gap-4',
  md: 'gap-6',
  lg: 'gap-8',
  xl: 'gap-12'
};
---

<div
  class:list={[
    'grid',
    columns[cols as ColKey],
    gaps[gap as GapKey],
    className
  ]}
>
  <slot />
</div>