---
interface Props {
  id?: string;
  title?: string;
  description?: string;
  padding?: 'none' | 'sm' | 'md' | 'lg';
  background?: 'none' | 'light' | 'dark' | 'primary' | 'gradient';
  class?: string;
}

const {
  id,
  title,
  description,
  padding = 'lg',
  background = 'none',
  class: className
} = Astro.props;

const paddings = {
  none: '',
  sm: 'py-8 md:py-12',
  md: 'py-12 md:py-16',
  lg: 'py-16 md:py-24'
};

const backgrounds = {
  none: '',
  light: 'bg-gray-50 dark:bg-dark-surface',
  dark: 'bg-gray-900 dark:bg-dark-surface-darker',
  primary: 'bg-primary-50 dark:bg-primary-900/10',
  gradient: 'bg-gradient-to-b from-primary-50 to-white dark:from-dark-bg dark:to-dark-bg-soft'
};
---

<section
  id={id}
  class:list={[
    paddings[padding],
    backgrounds[background],
    className
  ]}
>
  {(title || description) && (
    <div class="max-w-3xl mx-auto text-center mb-12 md:mb-16">
      {title && (
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
          {title}
        </h2>
      )}
      {description && (
        <p class="mt-4 text-lg text-gray-600 dark:text-gray-400">
          {description}
        </p>
      )}
    </div>
  )}
  <slot />
</section> 