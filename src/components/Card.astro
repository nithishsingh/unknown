---
import { Icon } from 'astro-icon/components';

interface Props {
  title: string;
  description: string;
  icon?: string;
  class?: string;
}

const { title, description, icon, class: className } = Astro.props;

---
<div class:list={["bg-primary-100 rounded-lg shadow-lg p-6 transition-transform duration-300 hover:-translate-y-1", className]} data-aos="fade-up" data-aos-delay="100">
  {icon && <div class="bg-primary-500/10 w-12 h-12 rounded-lg flex items-center justify-center mb-4"><Icon name={icon} class="w-6 h-6 text-primary-700" /></div>}
  <h3 class="text-xl font-bold text-primary-900 mb-2">{title}</h3>
  <p class="text-accent-steel-600">{description}</p>
  <slot />
</div>